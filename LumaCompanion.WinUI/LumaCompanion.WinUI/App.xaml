<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="LumaCompanion.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LumaCompanion.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    RequestedTheme="Dark">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- App specific resources -->
            <Color x:Key="LumaOrangeColor">#FFF26B14</Color>
            <SolidColorBrush x:Key="LumaOrangeBrush" Color="{StaticResource LumaOrangeColor}"/>
            <SolidColorBrush x:Key="LumaDarkGreyBrush" Color="#FF18191A"/>
            <SolidColorBrush x:Key="LumaLightGreyBrush" Color="#FF232526"/>
            <SolidColorBrush x:Key="LumaWhiteBrush" Color="#FFF5F5F5"/>

            <!-- Existing resources from template - can be kept, modified, or removed as needed -->
            <Color x:Key="Primary">#512BD4</Color> 
            <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}" />
            <SolidColorBrush x:Key="WhiteBrush" Color="White" /> <!-- Consider replacing with LumaWhiteBrush -->
            <SolidColorBrush x:Key="BlackBrush" Color="Black" /> <!-- Consider replacing with LumaDarkGreyBrush or similar -->

            <x:Double x:Key="AppFontSize">14</x:Double>

            <Style x:Key="MyLabel" TargetType="TextBlock">
                <Setter Property="Foreground"
                        Value="{StaticResource PrimaryBrush}" />
            </Style>

            <Style x:Key="Action" TargetType="Button">
                <Setter Property="FontSize"
                        Value="{StaticResource AppFontSize}" />
                <Setter Property="Padding"
                        Value="14,10" />
            </Style>

            <Style x:Key="PrimaryAction"
                   TargetType="Button"
                   BasedOn="{StaticResource Action}">
                <Setter Property="Background"
                        Value="{StaticResource PrimaryBrush}" />
                <Setter Property="CornerRadius"
                        Value="8" />
                <Setter Property="Foreground"
                        Value="{StaticResource WhiteBrush}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
