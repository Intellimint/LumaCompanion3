<ContentDialog
    x:Class="LumaCompanion.WinUI.Views.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LumaCompanion.WinUI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Luma Settings"
    PrimaryButtonText="Save"
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    Background="{StaticResource LumaDarkGreyBrush}"
    Foreground="{StaticResource LumaWhiteBrush}">

    <StackPanel Spacing="15">
        <TextBlock Text="Personalization" FontSize="18" Foreground="{StaticResource LumaOrangeBrush}"/>
        
        <TextBox x:Name="NameTextBox" Header="Name:" PlaceholderText="Enter your name" 
                 Background="{StaticResource LumaLightGreyBrush}" Foreground="{StaticResource LumaWhiteBrush}" BorderBrush="{StaticResource LumaOrangeBrush}"/>
        
        <ComboBox x:Name="PronounsComboBox" Header="Pronouns:" PlaceholderText="Select pronouns"
                  Background="{StaticResource LumaLightGreyBrush}" Foreground="{StaticResource LumaWhiteBrush}" BorderBrush="{StaticResource LumaOrangeBrush}">
            <x:String>He/Him</x:String>
            <x:String>She/Her</x:String>
            <x:String>They/Them</x:String>
            <x:String>Custom</x:String>
        </ComboBox>
        <TextBox x:Name="CustomPronounsTextBox" Header="Custom Pronouns (if selected):" PlaceholderText="Enter custom pronouns" Visibility="Collapsed"
                 Background="{StaticResource LumaLightGreyBrush}" Foreground="{StaticResource LumaWhiteBrush}" BorderBrush="{StaticResource LumaOrangeBrush}"/>
        
        <TextBox x:Name="ReligionTextBox" Header="Religion/Spirituality (Optional):" PlaceholderText="Enter your religion or spiritual beliefs" 
                 Background="{StaticResource LumaLightGreyBrush}" Foreground="{StaticResource LumaWhiteBrush}" BorderBrush="{StaticResource LumaOrangeBrush}"/>
    </StackPanel>
</ContentDialog>
